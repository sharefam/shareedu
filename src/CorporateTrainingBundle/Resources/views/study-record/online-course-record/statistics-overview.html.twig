{% extends 'study-record/online-course-record/layout.html.twig' %}
{% set type_nav = 'statistics-overview' %}
{% block course_record_content %}
    <div class="o-department-learn-data">
      <div class="o-department-learn-data__hd">
        <div class="row c-department-learn-data-board-wrap">
          <div class="col-md-4">
            <div class="c-department-learn-data-board">
              <div class="c-department-learn-data-board__hd">
                {{'study_record.statistics_overview.learn_course_count'|trans}}
              </div>
              <div class="c-department-learn-data-board__bd">
                {{ learnCourseCount|default(0) }}
              </div>
              <div>
                <i class="c-department-learn-data-board_icon es-icon es-icon-wendangkeshi"></i>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="c-department-learn-data-board">
              <div class="c-department-learn-data-board__hd">
                {{'study_record.statistics_overview.finished_course_num'|trans}}
                <span data-toggle="tooltip"
                      class="glyphicon glyphicon-question-sign color-gray text-sm js-data-popover">
                </span>
                <div class="popover-content hidden">
                  <div class="popover-item">
                    <div class="content">{{ 'study_record.statistics_overview.finished_course_num.info_message'|trans }}</div>
                  </div>
                </div>
              </div>
              <div class="c-department-learn-data-board__bd">
                {{ totalData.finishedCourseNum|default(0) }}<span class="is-down" title="{{'study_record.statistics_overview.year_finished_course_num'|trans}}"><i class="es-icon es-icon-increase"></i>{{ yearTotalData.finishedCourseNum|default(0) }}</span>
              </div>
              <i class="c-department-learn-data-board_icon es-icon es-icon-wendangkeshi"></i>
            </div>
          </div>
          <div class="col-md-4">
            <div class="c-department-learn-data-board">

              <div class="c-department-learn-data-board__hd">
                {{'study_record.statistics_overview.courses_learn_time'|trans}}
              </div>
              <div class="c-department-learn-data-board__bd">
                {{ totalData.totalLearnTime|default(0)|time_format }}<span class="is-down" title="{{'study_record.statistics_overview.year_courses_learn_time'|trans}}"><i class="es-icon es-icon-increase"></i>{{ yearTotalData.totalLearnTime|default(0)|time_format }}</span>
              </div>
              <div>
                <i class="c-department-learn-data-board_icon es-icon es-icon-time"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="project-plan-user-detail-item">
        <div class="project-plan-user-detail-item__head">
          {{ 'study_record.statistics_overview.statistics_categories'|trans }}
        </div>
        {{ render(controller('CorporateTrainingBundle:StudyCenter/CourseStatistics:statisticsByCategories', {userId:userId|default(0), tab_types:'learningStatistics'})) }}
      </div>
    </div>

{% endblock %}
