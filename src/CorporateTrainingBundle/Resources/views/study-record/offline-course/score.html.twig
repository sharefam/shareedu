<div class="phm pvm">
  <div class="phl">
    <table id="post-member-table" class="table table-hover table-striped">
      <thead>
      <tr>
        <th>{{'project_plan.study_record.course_title'|trans}}</th>
        <th>{{'project_plan.member.score'|trans}}</th>
      </tr>
      </thead>
      <tbody>
      {% if homeworks|default() %}
        {% for homework in homeworks %}
          {% set offlineCourseTaskResult = data('OfflineCourseTaskResult', {taskId: homework.id, userId:userId|default(app.user.id)}) %}
          <tr>
            <td>
              {{ homework.title|default() }}<span class="mlm label label-primary">{{'project_plan.offline_course.homework'|trans}}</span>
            </td>
            <td>
              {% if offlineCourseTaskResult.homeworkStatus|default('') %}
                {{ dict_text('offlineCourseHomeworkStatus', offlineCourseTaskResult.homeworkStatus) }}
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      {% else %}
        <tr>
          <td colspan="20">
            <div class="empty">{{'project_plan.record_empty'|trans}}</div>
          </td>
        </tr>
      {% endif %}
      </tbody>
    </table>
  </div>
</div>
