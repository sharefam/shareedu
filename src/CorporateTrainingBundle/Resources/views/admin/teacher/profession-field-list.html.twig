{% extends 'admin/layout.html.twig' %}

{% set menu = 'admin_teacher_profession_field' %}

{% set script_controller = 'corporatetrainingbundle/controller/teacher-manage/teacher-profession-field-list' %}

{% block page_buttons %}
{% endblock %}
{% block main %}
  <form class="form-inline ct-well  ct-mbl">
   {% include 'admin/page-buttons/page-buttons.html.twig' %}  
  </form>
  <table id="teacher-table" class="table table-striped table-hover" data-search-form="#user-search-form">
    <thead>
      <tr>
        <th width="20%">{{'admin.teacher.manage.profession_field.seq'|trans}}</th>
        <th width="60%">{{'admin.teacher.manage.profession_field.name'|trans}}</th>
        <th>{{'admin.teacher.manage.profession_field.operation'|trans}}</th>
      </tr>
    </thead>
    <tbody>
      {% if fields|default('') %}
        {% for field in fields %}
        <tr id="user-table-tr-{{ field.id }}">
          <td>{{ field.seq }}</td>
          <td>{{ field.name }}</td>
          <td>
            <a href="javascript:;" class="btn btn-default btn-sm " data-toggle="modal" data-target="#modal" data-url="{{ path('admin_teacher_profession_field_update', {id:field.id}) }}"><i class="glyphicon glyphicon-edit"></i>{{'admin.teacher.teaching_profession.edit'|trans}}</a>
            <a href="javascript:;" class="btn btn-default btn-sm delete-profession-field" data-url="{{ path('admin_teacher_profession_field_delete', {id:field.id}) }}"><i class="glyphicon glyphicon-trash"></i>{{'admin.teacher.teaching_profession.delete'|trans}}</a>
          </td>
        </tr>
        {% endfor %}
      {% else %}
        <tr><td colspan="20"><div class="empty">{{'admin.teacher.manage.profession_field_empty_hint'|trans}}</div></td></tr>
      {% endif %}
    </tbody>
  </table>
{{ admin_macro.paginator(paginator) }}
{% endblock %}