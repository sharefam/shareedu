{% extends 'old-bootstrap-modal-layout.html.twig' %}

{% block title %}{{'admin.teacher.level_setting'|trans}}{% endblock %}

{% block body %}
<div id="post-widget">
  <form class="form-horizontal" id="level-form" action="{% if level.id|default() %}{{ path('admin_teacher_level_edit', {id:level.id|default()}) }}{% else %}{{ path('admin_teacher_level_create') }}{% endif %}" method="post">
    <div class="form-group">
      <label class="col-md-3 control-label" for="name">{{'admin.teacher.level_setting.level_name'|trans}}</label>
      <div class="col-md-8 controls">
        <input class="form-control" id="name" type="text" name="name" value="{{ level.name|default('') }}" data-url="{{ path('admin_teacher_level_check',{exclude:level.name|default('')}) }}" tabindex="1">
      </div>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>
</div>
{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-link" data-dismiss="modal" tabindex="6">{{'form.btn.cancel'|trans}}</button>
  <button id="level-btn" data-submiting-text="{{'form.btn.submit.submiting'|trans}}" type="submit" class="btn btn-primary" data-toggle="form-submit" data-target="#level-form" tabindex="4">{{'form.btn.save'|trans}}</button>
  <script>app.load('corporatetrainingbundle/controller/teacher/level/manage')</script>
{% endblock %}

