{% extends 'admin/layout.html.twig' %}

{% set menu = 'admin_teacher_level' %}

{% set script_controller = 'corporatetrainingbundle/controller/teacher/level/list' %}

{% block page_buttons %}
{% endblock %}
{% block main %}
<form class="form-inline ct-well  ct-mbl">
   {% include 'admin/page-buttons/page-buttons.html.twig' %}
</form>
<table id="level-table" class="table table-striped table-hover" >
  <thead>
    <tr>
      <th width="20%">{{'admin.teacher.level_list.seq'|trans}}</th>
      <th width="60%">{{'admin.teacher.level_list.name'|trans}}</th>
      <th width="20%">{{'admin.teacher.level_list.operation'|trans}}</th>
    </tr>
  </thead>
  <tbody>
    {% if levels %}
      {% for level in levels %}
        <tr>
          <td>{{loop.index |default()}}</td>
          <td>{{level.name|default()}}</td>
          <td>
            <a href="javascript:;" class="btn btn-default btn-sm " data-toggle="modal" data-target="#modal" data-url="{{ path('admin_teacher_level_edit', {id:level.id|default()}) }}"><i class="glyphicon glyphicon-edit"></i>{{'admin.teacher.level_list.btn.edit_btn'|trans}}</a>
            <a href="javascript:;" class="btn btn-default btn-sm delete-level" data-url="{{ path('admin_teacher_level_delete', {id:level.id}) }}"><i class="glyphicon glyphicon-trash"></i>{{'admin.teacher.level_list.btn.delete_btn'|trans}}</a>
          </td>
        </tr>
      {% endfor %}
    {% else %}
       <tr><td colspan="20"><div class="empty">{{'admin.teacher.level_list.empty'|trans}}</div></td></tr>
    {% endif %}
  </tbody>
</table>
 {{ admin_macro.paginator(paginator) }} 
{% endblock %}
