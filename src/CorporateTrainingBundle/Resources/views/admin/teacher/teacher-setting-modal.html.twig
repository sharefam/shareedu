{% extends 'old-bootstrap-modal-layout.html.twig' %}

{% set modalSize = 'large' %}

{% block title %}{{'admin.user.teacher.basic_tab.promote.heading_title'|trans}}{% endblock %}
{% block body %}

<form id="teacher-setting-form" class="form-horizontal" method="post" action="{{ path('admin_teacher_setting', {userId:userId|default(0)}) }}">
  <div class="form-group">
    <label class="col-md-3 control-label">{{ 'admin.teacher.list.field'|trans }}</label>
    <div class="col-md-7 controls">
      <input type="text" id="teacherProfessionFieldIds" name="teacherProfessionFieldIds" class="width-full select2-offscreen" tabindex="-1" data-url="{{ path('admin_teacher_profession_match',{userId:userId}) }}" {% if profile.teacherProfessionFieldIds|default() %}data-profession="{{ professions|json_encode }}" value="{{ profile.teacherProfessionFieldIds|json_encode }}" {% endif %}>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-3 control-label">{{ 'admin.teacher.list.level'|trans }}</label>
    <div class="col-md-7 controls">
      <input type="text" id="levelId" name="levelId" class="width-full select2-offscreen" tabindex="-1" data-url="{{ path('admin_teacher_level_match') }}" {% if profile.levelId|default() %}data-level="{{ level|json_encode }}" value="{{ profile.levelId|default()}}" {% endif %}>
    </div>
  </div>
  <input type="hidden" name="userId" value="{{ userId }}">
  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
</form>
{% endblock %}


{% block footer %}
  <button id = "teacher-setting-btn" data-submiting-text="{{'form.btn.submit.submiting'|trans}}" class="btn btn-primary pull-right" data-toggle="form-submit" data-target="#teacher-setting-form">{{'form.btn.save'|trans}}</button>
  <button type="button" class="btn btn-link pull-right" data-dismiss="modal">{{'form.btn.cancel'|trans}}</button>
  
  <script>app.load('corporatetrainingbundle/controller/teacher/teacher-setting-modal');</script>
{% endblock %}
