{% extends 'admin/layout.html.twig' %}

{% set menu = 'admin_edu_cloud_email_overview' %}
{% block tabs %}{% endblock %}
{% block main %}
  <div class="panel panel-default notice-panel">
  <div class="panel-body panel-body-bg">
    {{ web_macro.flash_messages() }}
    <i class="es-icon es-icon-infooutline text-primary"></i>
    <div class="text-md start-msg mbl">{{'admin.edu_cloud.edu_email.no_enabled_email'|trans}}</div>
    {% if overview.isBuy == false %}
      <div class="color-gray notice-desc">
        {{'admin.edu_cloud.edu_email.start_enabled_email'|trans({'%buyUrl%': path('admin_cloud_email_buy', {type:'email'}), '%showUrl%': path('admin_cloud_show', {type:'email'})})|raw}}
      </div>
    {% endif %}
    <div class="color-gray">
      <form class="form-horizontal notice-desc-mb" role="form" method="post" action="{{ path('admin_edu_cloud_email_switch') }}">
        <button type="submit" class="btn btn-primary btn-lg" {% if overview.isBuy == false %}disabled="disabled"{% endif %}
          name="email-open">{{'admin.edu_cloud.edu_email.start_enabled_email_btn'|trans}}
        </button>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
      </form>
    </div>
  </div>
  </div>
   <ul class="edu-cloud-intro row clearfix">
    <li class="list-item col-md-6">
     <div class="list-item-container">
       <a class="list-item-pic" href="javascript:;">
         <img src="/assets/img/backstage/cloud-email/enter.png">
       </a>
       <div class="list-item-txt">
         <div class="list-item-txt_title">一键接入，简单易用</div>
         <div class="list-item-txt_desc">从开通到使用仅需3分钟。免开发、免运维，帮你节省技术成本。</div>
       </div>
     </div>
    </li>
    <li class="list-item col-md-6">
     <div class="list-item-container">
       <a class="list-item-pic" href="javascript:;">
         <img class="email-img" src="/assets/img/backstage/cloud-email/use.png">
       </a>
       <div class="list-item-txt">
         <div class="list-item-txt_title">专用通道，高效稳定</div>
         <div class="list-item-txt_desc">配备专用通道，保证通道信誉度、流畅度。</div>
       </div>
     </div>
    </li>  
  </ul>
{% endblock %}