{% extends 'admin/layout.html.twig' %}

{% set menu = 'admin_cloud_video_overview' %}
{% block tabs %}{% endblock %}

{% block main %}

  <div class="panel panel-default notice-panel">
    <div class="panel-body panel-body-bg">
      <i class="es-icon es-icon-infooutline text-primary"></i>
      <div class="text-md start-msg mbl">{{'admin.edu_cloud.edu_video.no_enable'|trans}}</div>
      <form class="form-horizontal notice-desc-mb" role="form" method="post" action="{{ path('admin_cloud_video_switch') }}">
        <button type="submit" class="btn btn-primary btn-lg" name="upload_mode" value="cloud">{{'admin.edu_cloud.edu_video.enable'|trans}}</button>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
      </form>
    </div>
    <div class="edu-cloud-video-intro">
    </div>
  </div>
  <ul class="edu-cloud-intro row clearfix">
    <li class="list-item col-md-6">
