{% do script(['libs/bootstrap-treeview.js', 'corporatetrainingbundle/js/admin/user/permission-org-select/index.js'], 900) %}
<div data-url="{{ saveUrl|default() }}" class="js-treeview-select-wrap" id="{{ id|default() }}" data-check-column-name="{% if treeName|default() == 'orgCode' %}orgCode{% else %}id{% endif %}">
  <div class="treeview-select js-treeview-select">
    {% set defaultPlaceholder = 'org.all.orgs'|trans %}
    <input class="form-control js-treeview-text department-manage-search-form-group__tree" placeholder="{{ placeholder|default(defaultPlaceholder)|trans }}" type="text" autocomplete="off">
    <div  class="treeview-select-menu js-treeview-select-menu"></div>
    <input class="hide js-treeview-ipt" type="text" name="{{ treeName|default('orgIds') }}" value="{{ ids|default() }}">
    <div class="hide js-treeview-data">{{ data|default() }}</div>
  </div>
</div>