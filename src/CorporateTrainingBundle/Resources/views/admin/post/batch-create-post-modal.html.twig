{% extends 'old-bootstrap-modal-layout.html.twig' %}

{% block title %}{{'admin.post.batch_setting'|trans}}{% endblock %}

{% block body %}
<div id="post-widget">

  <form class="form-horizontal" id="post-form" action="{{ path('admin_post_create',{groupId:post.groupId}) }}" method="post">
    <div class="form-group">
        <label class="col-md-3 control-label" for="post-names">{{'admin.post.post_name'|trans}}</label>
      <div class="col-md-8 controls">
        <textarea id="post-names" name="postNames" class="form-control" rows="10" data-url="{{ path('admin_post_batch_create_name_check',{groupId:post.groupId}) }}"></textarea>
        <div class="help-block">{{ 'admin.post.batch_setting.post_name.message.help'|trans }}</div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3 control-label" for="post-group">{{'admin.post.post_group'|trans}}</label>
      <div class="col-md-8 controls">
        <label class="control-label" id="post-group">{{ postGroup.name }}</label>
      </div>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>
</div>
{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-link" data-dismiss="modal" tabindex="6">{{'form.btn.cancel'|trans}}</button>
  <button id="post-btn" data-submiting-text="{{'form.btn.submit.submiting'|trans}}" type="submit" class="btn btn-primary" data-toggle="form-submit" data-target="#post-form" tabindex="4">{{'form.btn.save'|trans}}</button>
  <script>app.load('corporatetrainingbundle/controller/post/batch-create-post-modal')</script>
{% endblock %}

