{% import "macro.html.twig" as web_macro %}

<table id="offline-activity-table" class="table table-striped table-hover" data-search-form="#offline-activity-search-form">
  <thead>
  <tr>
    <th width="5%">{{ 'ID'|trans }}</th>
    <th width="23%">{{ 'admin.offline_activity'|trans }}</th>
    <th width="10%">{{ 'admin.offline_activity.org'|trans }}</th>
    <th width="15%">{{ 'admin.offline_activity.time'|trans }}</th>
    <th width="15%">{{ 'admin.offline_activity.enrollment.deadline'|trans }}</th>
    <th width="10%">{{ 'admin.offline_activity.enrollment.studentNum'|trans }}
      <span data-toggle="tooltip" class="glyphicon glyphicon-question-sign color-gray text-sm js-data-popover">
        </span>
      <div class="popover-content hidden">
        <div class="popover-item">
          <div class="content">{{ 'admin.offline_activity.enrollment.status.studentNum'|trans }}</div>
        </div>
      </div>
    </th>
    <th width="10%">{{ 'admin.offline_activity.status'|trans}}</th>
    <th width="12%">{{ 'admin.offline_activity.operation'|trans }}</th>
  </tr>
  </thead>
  <tbody>
  <p class="text-muted">
    <span class="mrl">{{ 'admin.offline_activity.count'|trans }}<strong class="inflow-num">{{ offlineActivitiesCount|default(0) }}</strong>{{ 'admin.offline_activity.data'|trans }}</span>
  </p>
  {% if offlineActivities|default() %}
    {% for offlineActivity in offlineActivities %}
      {% include 'admin/offline-activity/offline-activity-table-tr.html.twig'%}
    {% endfor %}
  {% else %}
    <td colspan="20">
      <div class="empty">{{'site.datagrid.empty'|trans}}</div>
    </td>
  {% endif %}
  </tbody>
</table>
<nav class="text-center">
  {{ web_macro.ajax_paginator(paginator) }}
</nav>