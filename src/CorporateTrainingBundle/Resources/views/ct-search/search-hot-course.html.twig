<div class="panel panel-default live-course-body">
	<div class="panel-heading">
        <h3 class="panel-title">{{'cloud_search.course.recommend.content_title'|trans}}</h3>
    </div>
    <div class="panel-body es-live-recommend">
        {% set courseSets = data('RecommendCourseSets',{'count':5}) %}
        {% for courseSet in courseSets if courseSets %}
		{% set course = data('PublishedCourseByCourseSet',{ courseSetId: courseSet.id } ) %}
	    <div class="media">
	      <div class="media-left">
			  <a href="{{ path('course_show', {id: courseSet.defaultCourseId}) }}" title="{{ courseSet.title }}" target="_blank">
                  {{ lazy_img(filepath(course_set_cover(courseSet, 'large'), 'courseSet.png'), 'img-responsive', courseSet.title) }}
			  </a>
	        
	      </div>
	      <div class="media-body">
	        <div class="title">
			  <a href="{{ path('course_show', {id: courseSet.defaultCourseId}) }}" class="gray-darker" title="{{ courseSet.title }}" target="_blank">{{ courseSet.title|plain_text(20) }}</a>
	        </div>
		    <span class="aside-hot-course-item-detail"><i class="es-icon es-icon-people"></i>
			  <span class="dis-i-b wid-30">{{ web_macro.label_num_format(courseSet.studentNum) }}</span>
		    </span>
		    <span class="aside-hot-course-item-detail mls"><i class="es-icon es-icon-textsms"></i>
			  <span class="dis-i-b wid-30">{{ web_macro.label_num_format(courseSet.ratingNum) }}</span>
		    </span>
	      </div>
	    </div>
    {% else %}
    	<div class="empty">{{'cloud_search.course.recommend.empty'|trans}}</div>
    {% endfor %}
    </div>
</div>