<div class="panel panel-default live-course-body">
	<div class="panel-heading">
        <h3 class="panel-title">{{'search.offlineactivity.latest_offline_activity'|trans}}</h3>
    </div>
    <div class="panel-body es-live-recommend">
        {% set offlineActivities = data('LatestOfflineActivities',{'count':5 }) %}
        {% for offlineActivity in offlineActivities if offlineActivities %}
	    <div class="media">
	      <div class="media-left">
			  <a href="{{ path('course_show', {id: offlineActivity.id}) }}" title="{{ offlineActivity.title }}" target="_blank">
                  {{ lazy_img(filepath(offlineActivity['cover']['large']|default(''), 'activity.png'), 'img-responsive', offlineActivity.title) }}
			  </a>
	        
	      </div>
		  <div class="media-body">
			<div class="title">
				<a href="{{ path('offline_activity_detail', {id: offlineActivity.id}) }}" class="gray-darker" title="{{ offlineActivity.title }}" target="_blank">{{ offlineActivity.title|plain_text(20) }}</a>
			</div>
			<span class="aside-hot-course-item-detail mls">{{ 'search.offlineactivity.studentnum'|trans }}{{ offlineActivity.studentNum|default(0) }}/{% if offlineActivity.maxStudentNum|default(0) == 0 %}{{ 'search.offlineactivity.no_limit'|trans }}{% else %}{{ offlineActivity.maxStudentNum|default(0) }}{% endif %}</span>
		  </div>
	    </div>
    {% else %}
    	<div class="empty">{{'search.offlineactivity.empty_offline_activity'|trans}}</div>
    {% endfor %}
    </div>
</div>
