{% extends 'offline-activity-manage/layout.html.twig' %}

{% block title %}{{ 'offline_activity.cover_img'|trans }} - {{ parent() }}{% endblock %}
{% set side_nav = 'cover' %}
{% do script(['corporatetrainingbundle/js/offline-activity-manage/cover/index.js']) %}
{% set token = upload_token('tmp', 'image') %}
{% block main %}
<div class="panel panel-default panel-col">
  <div class="panel-heading">
    {{'offline_activity.cover_img'|trans}}
  </div>

  <div class="panel-body">
      {{ web_macro.flash_messages() }}
      <div class="form-group clearfix">
        <div class="col-md-offset-2 col-md-8 controls">
          <img class="img-responsive" src="{{ filepath(offlineActivity['cover']['large']|default(''), 'activity.png') }}" />
        </div>
      </div>
      <div class="form-group clearfix">
        <div class="col-md-offset-2 col-md-8 controls">
          <p class="help-block upload-height">{{ 'offline_activity.cover_img.upload_tips'|trans|raw }}</p>
        </div>
      </div>

      <div class="form-group clearfix">
        <div class="col-md-offset-2 col-md-8 controls">
          <a
          id="upload-picture-btn"
          class="upload-picture-btn btn btn-fat btn-primary"
          data-upload-token="{{ upload_token('tmp', 'image') }}"
          data-goto-url="{{path('offline_activity_manage_cover_crop', {id:offlineActivity.id})}}"
          >{{'offline_activity.cover_img.upload'|trans}}</a>
        </div>
      </div>
  </div>
</div>
{% endblock %}