{% extends 'offline-activity-manage/layout.html.twig' %}

{% block title %}{{ 'offline_activity.cover_img'|trans }} - {{ parent() }}{% endblock %}
{% set side_nav = 'cover' %}
{% do script(['corporatetrainingbundle/js/offline-activity-manage/cover-crop/index.js']) %}
{% set token = upload_token('tmp', 'image') %}
{% block main %}

<div class="panel panel-default panel-col">
  <div class="panel-heading">
    {{'offline_activity.cover_img'|trans}}
  </div>
  <div id="offline-activity-picture-crop-form" class="panel-body">
      <div class="form-group clearfix">
        <div class="col-md-offset-2 col-md-8 controls">
          <img class="img-responsive" src="{{ filepath(pictureUrl) }}"
          id="offline-activity-picture-crop"
          width="{{scaledSize.width}}" height="{{scaledSize.height}}" data-natural-width="{{ naturalSize.width }}" data-natural-height="{{ naturalSize.height }}" />
          <div class="help-block">{{'offline_activity.cover_img.crop_area_choose.tips'|trans}}</div>
        </div>
      </div>

      <div class="form-group clearfix">
        <div class="col-md-offset-2 col-md-8 controls">
         <button class="btn btn-fat btn-primary upload-picture-btn"
          data-url="{{path('offline_activity_manage_cover_crop', {id: offlineActivity.id})}}"
          data-goto-url="{{path('offline_activity_manage_cover',{id: offlineActivity.id})}}"
          id="upload-picture-btn" data-loading-text="{{'form.btn.save.submiting'|trans}}">{{'form.btn.save'|trans}}</button>
          <a href="javascript:;" class="go-back btn btn-link">{{'offline_activity.cover_img.reselect'|trans}}</a>
        </div>
      </div>
  </div>
</div>

{% endblock %}

