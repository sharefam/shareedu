{% extends 'importer/layout.html.twig' %}

{% block title %}{{ 'offline_activity.batch_examination'|trans }}{% endblock %}

{% do script(['libs/handlebars.js', 'libs/jquery-validation.js', 'corporatetrainingbundle/js/offline-activity-manage/grade-import/index.js']) %}

{% block form_data %}
  <div class="form-group">
    <div class="col-md-2 col-md-offset-1">
      <label class="badge pull-right">
        1
      </label>
    </div>
    <div class="col-md-8 controls">
      <p>
        {{ 'offline_activity.examination.download_assessment_list'|trans }}<a href="{{ path('exporter_export', {type: 'batch_grade_example', activityId: offlineActivity.id , keywordType: app.request.query.get('keywordType'), keyword: app.request.query.get('keyword')}) }}">{{ 'offline_activity.examination.enrollment_download'|trans }}</a>，{{ 'offline_activity.examination.fill_in'|trans }}。
      </p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2 col-md-offset-1"></div>
    <div class="col-md-8 controls">
      <p>
        {{ 'offline_activity.examination.fill_in.tips'|trans|raw }}
      </p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2 col-md-offset-1">
      <label class="badge pull-right">
        2
      </label>
    </div>
    <div class="col-md-8 controls">
      <p>{{ 'offline_activity.examination.submit_assessment_list'|trans }}</p>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-3">
    </label>
    <div class="col-md-8 controls">
      <div class="uploader blue">
        <input type="text" class="js-filename filename" readonly="readonly"/>
        <input type="button" name="excel" class=" button" value="{{ 'offline_activity.examination.btn.browse'|trans }}..."/>
        <input type="file" size="30" name="excel"/>
      </div>
    </div>
  </div>

  <input type="hidden" name="offlineActivityId" value="{{ offlineActivity.id }}">
{% endblock %}

{% block stylesheet %}
  <style>
    .page-header {
      padding-bottom: 12px;
      margin: 0 0 20px 0;
      padding: 0;
      border-bottom-width: 2px;
    }
  </style>
{% endblock %}