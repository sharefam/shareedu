{% extends 'importer/layout.html.twig' %}

{% block title %}{{ 'offline_activity.user_import.batch_import'|trans }}{% endblock %}

{% do script(['libs/handlebars.js', 'libs/jquery-validation.js', 'corporatetrainingbundle/js/offline-activity-manage/grade-import/index.js']) %}

{% block form_data %}
  <div class="form-group">
    <div class="col-md-2 col-md-offset-1">
      <label class="badge pull-right">
        1
      </label>
    </div>
    <div class="col-md-8 controls">
      <p>
        {{ 'offline_activity.user_import.download_example'|trans }}<a href="{{ asset('bundles/corporatetraining/example/offline_activity_user_import_example.xlsx') }}">{{ 'offline_activity.user_import.download'|trans }}</a>，{{ 'offline_activity.user_import.fill_in'|trans }}。
      </p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2 col-md-offset-1">
      <label class="badge pull-right">
        2
      </label>
    </div>
    <div class="col-md-8 controls">
      <p>{{ 'offline_activity.user_import.user_list_submit'|trans }}</p>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-3">
    </label>
    <div class="col-md-8 controls">
      <div class="uploader blue">
        <input type="text" class="js-filename filename" readonly="readonly"/>
        <input type="button" name="excel" class=" button" value="{{ 'offline_activity.user_import.btn.browse'|trans }}..."/>
        <input type="file" size="30" name="excel"/>
      </div>
    </div>
  </div>

  <input type="hidden" name="offlineActivityId" value="{{ offlineActivity.id }}">
{% endblock %}

{% block stylesheet %}
  <style>
    .page-header {
      padding-bottom: 12px;
      margin: 0 0 20px 0;
      padding: 0;
      border-bottom-width: 2px;
    }
  </style>
{% endblock %}