{% extends 'importer/layout.html.twig' %}

{% block title %}{{ 'project_plan.offline_exam.import'|trans }}{% endblock %}
{% do script(['libs/handlebars.js', 'libs/jquery-validation.js', 'corporatetrainingbundle/js/project-plan/exam-manage/offline-exam/import/index.js']) %}

{% block form_data %}
  <div class="form-group">
    <div class="col-md-3 col-md-offset-1">
      <label class="badge pull-right">
        1
      </label>
    </div>
    <div class="col-md-8 controls">
      <p>
        {{ 'project_plan.offline_exam.download_template'|trans }}<a href="{{ path('exporter_export', {type: 'project_plan_offline_exam_member', projectPlanId: projectPlanId}) }}">{{ 'project_plan.offline_exam.btn_download'|trans }}</a>，{{ 'project_plan.offline_exam.download_info'|trans }}。
      </p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-3 col-md-offset-1">
      <label class="badge pull-right">
        2
      </label>
    </div>
    <div class="col-md-8 controls">
      <p>{{ 'project_plan.offline_exam.import_info'|trans }}</p>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4">
    </label>
    <div class="col-md-8 controls">
      <div class="uploader blue">
        <input type="text" class="js-filename filename" readonly="readonly"/>
        <input type="button" name="excel" class=" button" value="{{ 'project_plan.offline_exam.view'|trans }}"/>
        <input type="file" size="30" name="excel"/>
      </div>
    </div>
  </div>

  <input type="hidden" name="projectPlanId" value="{{ projectPlanId }}">
  <input type="hidden" name="offlineExamId" value="{{ offlineExamId }}">
{% endblock %}

{% block stylesheet %}
  <style>
    .page-header {
      padding-bottom: 12px;
      margin: 0 0 20px 0;
      padding: 0;
      border-bottom-width: 2px;
    }
  </style>
{% endblock %}
