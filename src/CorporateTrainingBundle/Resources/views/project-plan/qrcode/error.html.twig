          <a class="link-back" href="{{ path('homepage') }}">{{ 'project_plan.to_home_page'|trans }}</a>
        </section>
        {% block bottom_content %}{% endblock %}
    {% endblock %}

    {% block footer %}
    {% endblock %}
{% endblock %}
