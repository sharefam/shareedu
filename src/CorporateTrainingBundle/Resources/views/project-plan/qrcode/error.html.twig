{% extends 'layout.html.twig' %}

{% set bodyClass = "sign-in-body" %}
{% block body %}
    {% block header %}
    {% endblock %}

    {% block full_content %}
        {% block top_content %}{% endblock %}
        <section class="sign-in-status">
          <div class="sign-in-icon-wrap sign-in-error"><i class="es-icon es-icon-close01"></i></div>
