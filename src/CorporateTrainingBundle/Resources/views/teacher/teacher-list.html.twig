{% import "macro.html.twig" as web_macro %}
<div class="row">
{% if teachers|default('') %}
  {% for teacher in teachers %}
    {% set profile = profiles[teacher.id] %}
    {% set teacherProfile = teacherProfiles[teacher.id]|default('') %}
    {% set isFollowed = (teacher.id in Myfollowings)|default(false) %}
    <div class="col-lg-3 col-md-4 col-xs-6">
      {% include 'teacher/teacher-item.html.twig' %}
    </div>
  {% endfor %}
{% else %}
  <div class="empty">{{ 'teacher.list.empty'|trans }}</div>
{% endif %}
</div>
<nav class="text-center">
  {{ web_macro.ajax_paginator(paginator) }}
</nav>