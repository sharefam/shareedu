<div class="media topic-item">
  <div class="media-left media-middle">
    {{ web_macro.user_avatar(author, 'pull-left', 'avatar-sm', true)}}
  </div>
  <div class="media-body">
    <div class="title">
      {% if thread.type == 'question'%}
        <i class="es-icon es-icon-help color-danger" data-toggle="tooltip" data-placement="top" title="{{'study_center.thread.list_item.question'|trans}}"></i>
      {% endif %}
      {% if thread.type == 'event'%}
        <i class="es-icon es-icon-locationcircle color-primary" data-toggle="tooltip" data-placement="top" title="{{'study_center.thread.list_item.event'|trans}}"></i>
      {% endif %}

      {% if thread.type == 'discussion' %}
        <i class="es-icon es-icon-chatcircle color-info" data-toggle="tooltip" data-placement="top" title="{{'study_center.thread.list_item.discussion'|trans}}"></i>
      {% endif %}
      <a target="_blank" href="{{ path('course_thread_show', {courseId:thread.courseId, threadId:thread.id}) }}">{{ thread.title }}
      </a>

      {% if thread.isStick %}
        <span class="label label-primary" title="{{'study_center.thread.list_item.sticky_post'|trans}}">{{'study_center.thread.list_item.stick_label'|trans}}</span>
      {% endif %}
      {% if thread.isElite %}
        <span class="label label-danger" title="{{'study_center.thread.list_item.essence_tips'|trans}}">{{'study_center.thread.list_item.essence_label'|trans}}</span>
      {% endif %}
    </div>

    <div class="metas text-sm">
      <a href="{{ path('user_show', {id:author.id}) }}" class="color-gray">{{ author.nickname }}</a>
      <span>{{'study_center.thread.list_item.create_thread'|trans({'%dict_text%':dict_text('threadType', thread.type)})}}</span>
      {% if thread.postNum > 0 %}
        {% set poster = users[thread.latestPostUserId] %}
        •
        <span>{{'study_center.thread.list_item.last_post'|trans}} {{ web_macro.user_link(poster, 'link-muted') }}</span>
      {% endif %}

      • <span>{{ thread.latestPostTime|smart_time }}</span>
      <div class="pull-right">
        <span class="pull-left mrs"><span><i class="es-icon es-icon-forum color-gray"></i> {{'study_center.thread.list_item.reply'|trans}} </span>{{ thread.postNum }}</span>
        <span class="pull-left"><span><i class="es-icon es-icon-removeredeye color-gray"></i> {{'study_center.thread.list_item.view'|trans}} </span>{{ thread.hitNum }}</span>
      </div>
    </div>
  </div>
</div>
