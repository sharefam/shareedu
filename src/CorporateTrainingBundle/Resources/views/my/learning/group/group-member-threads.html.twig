{% extends 'my/learning/group/layout.html.twig' %}

{% block title %}{{'my.learning.group'|trans}} - {{ parent() }}{% endblock %}

{% set tab_nav = 'thread' %}

{% block group_main %}
  {% embed "bootstrap/panel.html.twig" with {class:'panel-col'} %}
  {% block heading %}
    {{'my.learning.group'|trans}}
       {% endblock %}
    {% block body %}
      <div class="row">

        <div class="col-md-12">
          {% if not is_mobile_client() %}
            {% include 'my/learning/group/group-member-nav-pill.html.twig' %}<br>
          {% endif %}
          {% include 'my/learning/group/groups-threads-ul.html.twig' with {
          'threads':threads,
          'groups':groups, }
          %}
        </div>
        <div class="col-md-12 pull-left">
          {{ web_macro.paginator(paginator) }}
        </div>
      </div>
    {% endblock %}
  {% endembed %}
{% endblock %}