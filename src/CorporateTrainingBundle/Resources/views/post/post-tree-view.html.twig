  {% if modal == 'modal' %}
    <script>app.load('corporatetrainingbundle/controller/tree-view/index')</script>
  {% else %}
      {% do load_script('corporatetrainingbundle/controller/tree-view/index') %}
  {% endif %}

  <style>
     .treeview{
            display: none;
            position:absolute;
            z-index:100;
            height: 300px;
            overflow: scroll;
        }
         .treeview::-webkit-scrollbar{
          width:1px;
        } 
        .tree-wrapper .input-check-node {
            display: inline-block;
        }
        .tree-wrapper{
            display:inline-block;
            position:relative;
        }
        .checkable-output{
            position:absolute;
            z-index:200;
            left:-40px;
        }
        .treeview .list-group-item{
            white-space:nowrap; 
            padding:10px 25px 10px 15px
        }
         .checkable-output ul li{
            position: relative;
            display: block;
            padding: 10px 15px;
            margin-bottom: -1px;
            background-color: #fff;
            border: 1px solid #ddd;
            cursor: pointer;
        }
  </style>
<div id={{id}} class="tree-wrapper" data={{id}} data-id={{id}} data-width={{width}}>
    <input type="hidden" value="{{arrTree}}" id="input-data-{{id}}">
    <label for="input-check-node" class="sr-only">Search Tree:</label>
    <input type="input" id="input-check-node" class="form-control input-check-node" placeholder={{placeholder}} value=""  autocomplete="off" >
    <div id="checkable-output-{{id}}" class="checkable-output" style="display: none"></div>
    <div id="treeview-checkable-{{id}}" class="treeview"></div>
</div>
